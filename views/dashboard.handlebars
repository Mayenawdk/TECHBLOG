<h1>Dashboard</h1>
<h2>Your Posts</h2>

{{#each posts}}
  <div class="post">
    <h2>{{this.title}}</h2>
    <p>Created on {{this.createdAt}}</p>
    <p>{{this.content}}</p>
  </div>
{{else}}
  <p>No posts found.</p>
{{/each}}

<form id="new-post-form">
  <input type="text" name="title" placeholder="Post Title" />
  <textarea name="content" placeholder="Post Content"></textarea>
  <button type="submit">Add Post</button>
</form>
